<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.techniquesmm.employeeinformationproject.InsertActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_name"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Name"
                    android:textSize="18dp"/>

                <EditText
                    android:layout_marginRight="10dp"
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_name"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:ems="8"
                    android:textSize="18sp"
                    android:background="@drawable/forsom_edittext"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_fathername"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Father Name"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp" />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_fathername"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="20dp"
                    android:inputType="textPersonName" />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_dob"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textSize="18dp"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_dob"
                    android:layout_weight="1"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_edit_age"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:layout_weight="2"
                    style="@style/text"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_age"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textSize="18dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_email"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="18dp"
                    android:layout_weight="2"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:inputType="textEmailAddress"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="10dp"
                    android:textSize="18dp"/>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_phnoe"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Phone No"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="20dp"
                    android:inputType="phone"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_salary"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Salary"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_salary"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_dept"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_dept"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:textSize="18dp"
                    android:inputType="textPersonName"
                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_qulification"
                    android:layout_width="90dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Qualification"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_qulification"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="15dp"
                    android:inputType="textPersonName"
                    />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_position"
                    android:layout_width="90dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_position"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:ems="10"
                    android:background="@drawable/forsom_edittext"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:inputType="textPersonName"
                    />
            </TableRow>
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/text"
                    android:id="@+id/tv_edit_address"
                    android:layout_width="90dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    />

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/et_edit_address"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:background="@drawable/forsom_edittext"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    />

            </TableRow>


        </TableLayout>
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_marginTop="8dp"
                android:id="@+id/bt_save"
                android:layout_width="125dp"
                android:textColor="#fff"
                android:background="@color/button"
                android:layout_height="40dp"
                android:text="Save"
                />

            <Button
                android:layout_marginTop="8dp"
                android:id="@+id/bt_cancel"
                android:layout_width="125dp"
                android:textColor="#fff"
                android:background="@color/button"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Cancel"
                />
        </LinearLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>